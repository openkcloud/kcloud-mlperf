# ============================================================================
# Dockerfile.benchmark - MLPerf/MMLU Benchmark Container
# ============================================================================
# Pre-built container with all dependencies for Llama-3.1-8B benchmarks.
# Supports both MLPerf (CNN/DailyMail) and MMLU evaluations.
# ============================================================================

FROM nvidia/cuda:12.1.0-devel-ubuntu22.04

# Metadata
LABEL maintainer="kcloud"
LABEL description="MLPerf/MMLU Benchmark Runner for Llama-3.1-8B"
LABEL version="1.0.0"

# Prevent interactive prompts
ENV DEBIAN_FRONTEND=noninteractive
ENV PYTHONUNBUFFERED=1
ENV PIP_NO_CACHE_DIR=1

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    python3.10 \
    python3.10-venv \
    python3-pip \
    git \
    git-lfs \
    curl \
    wget \
    vim \
    htop \
    tini \
    && rm -rf /var/lib/apt/lists/* \
    && git lfs install

# Set Python 3.10 as default
RUN update-alternatives --install /usr/bin/python python /usr/bin/python3.10 1 \
    && update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.10 1

# Upgrade pip
RUN python -m pip install --upgrade pip setuptools wheel

# Install PyTorch with CUDA support
RUN pip install torch==2.1.2 torchvision==0.16.2 torchaudio==2.1.2 \
    --index-url https://download.pytorch.org/whl/cu121

# Install ML dependencies
RUN pip install \
    transformers==4.46.2 \
    vllm==0.6.6 \
    accelerate==0.34.2 \
    sentencepiece==0.2.0 \
    datasets==2.21.0 \
    evaluate==0.4.2 \
    rouge-score==0.1.2 \
    matplotlib==3.9.0 \
    pyyaml==6.0.2 \
    huggingface-hub==0.26.0 \
    nltk==3.8.1

# Download NLTK data for sentence tokenization
RUN python -c "import nltk; nltk.download('punkt', quiet=True); nltk.download('punkt_tab', quiet=True)"

# Create working directory
WORKDIR /app

# Clone the benchmark repository
RUN git clone https://github.com/openkcloud/kcloud-mlperf.git /app/kcloud-mlperf

# Create cache directories
RUN mkdir -p /cache/hf_cache /cache/hf_home /cache/results /cache/work \
    && chmod -R 777 /cache

# Set environment variables
ENV TRANSFORMERS_CACHE=/cache/hf_cache
ENV HF_HOME=/cache/hf_home
ENV XDG_CACHE_HOME=/cache

# Copy entrypoint script
COPY docker-entrypoint.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/docker-entrypoint.sh

# Use tini as init system
ENTRYPOINT ["/usr/bin/tini", "--", "/usr/local/bin/docker-entrypoint.sh"]

# Default command shows help
CMD ["--help"]